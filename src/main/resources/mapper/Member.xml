<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kakao.kitkat.dao.MemberDao">

	<select id="selectOne" resultType="com.kakao.kitkat.entities.Member">
		select * from member where email=#{email}
	</select>

	<insert id="insertRow">
		insert into member (email, name, password, phone1,phone2,phone3, photo)
		values(#{email},#{name},#{password},#{phone1},#{phone2},#{phone3},#{photo})
	</insert>
	
	<update id="updateRow">
		update member set name=#{name},password=#{password},phone1=#{phone1},
		phone2=#{phone2},phone3=#{phone3},photo=#{photo} 
		where email = #{email}
	</update>
	
	<select id="selectAll" resultType="com.kakao.kitkat.entities.Member">
		select * from member
	</select>
	
	<update id="updateAjax">
		update member set memlevel=#{memlevel} 
		where email = #{email}
	</update>
	
	<delete id="deleteAjax">
		delete from member where email=#{email}
	</delete>
	
</mapper>